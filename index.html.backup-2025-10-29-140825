  <!-- Coupon System -->
  <script src="src/js/coupons.js"></script>
  <script>
    // Global handlers for coupon validation and submission
    
    /**
     * Handle coupon validation
     */
    async function handleCouponValidation(planType) {
      const inputId = `coupon-input-${planType}`;
      const messageId = `coupon-message-${planType}`;
      const input = document.getElementById(inputId);
      const messageDiv = document.getElementById(messageId);
      
      // Find the validate button properly
      const validateBtn = document.querySelector(`#coupon-pre-form-${planType} .coupon-btn--primary`);
      
      const couponCode = input.value.trim();
      
      // Clear previous message and reset display
      messageDiv.className = 'coupon-message';
      messageDiv.textContent = '';
      messageDiv.style.display = 'none';
      
      // Show loading
      messageDiv.className = 'coupon-message coupon-message--loading show';
      messageDiv.style.display = 'block';
      messageDiv.textContent = window.i18n ? window.i18n.t('coupon.form.processing') : 'A validar...';
      
      if (validateBtn) {
        validateBtn.disabled = true;
      }
      
      try {
        // Validate coupon
        const result = await window.CouponSystem.validate(couponCode);
        
        if (result.valid) {
          // Success!
          messageDiv.className = 'coupon-message coupon-message--success show';
          messageDiv.style.display = 'block';
          messageDiv.textContent = result.message;
          
          // Save to session
          window.CouponSystem.saveToSession(couponCode, result.type, planType);
          
          // Show "Continue" button
          setTimeout(() => {
            showCouponValidSuccess(planType);
          }, 1000);
          
        } else {
          // Invalid coupon
          messageDiv.className = 'coupon-message coupon-message--error show';
          messageDiv.style.display = 'block';
          messageDiv.textContent = result.message;
          
          if (validateBtn) {
            validateBtn.disabled = false;
          }
        }
        
      } catch (error) {
        console.error('Error validating coupon:', error);
        messageDiv.className = 'coupon-message coupon-message--error show';
        messageDiv.style.display = 'block';
        messageDiv.textContent = 'Erro ao validar cupão. Tente novamente.';
        
        if (validateBtn) {
          validateBtn.disabled = false;
        }
      }
    }
    
    /**
     * Show success state, send email and continue button
     */
    async function showCouponValidSuccess(planType) {
      const messageId = `coupon-message-${planType}`;
      const messageDiv = document.getElementById(messageId);
      const successInfoId = `coupon-success-info-${planType}`;
      const successInfoDiv = document.getElementById(successInfoId);
      const couponData = window.CouponSystem.getFromSession();
      
      if (!couponData) return;
      
      // Enviar email via Formspree E guardar no Supabase
      try {
        const couponTypeLabel = couponData.couponType === 'member_email' ? 'Email de Sócio' : 'Cupão Genérico';
        const planLabel = planType.charAt(0).toUpperCase() + planType.slice(1);
        
        // 1. Enviar email via Formspark
        await fetch('https://submit-form.com/cMzqixKrn', {
          method: 'POST',
          body: JSON.stringify({
            coupon_code: couponData.couponCode,
            coupon_type: couponTypeLabel,
            plan_type: planLabel,
            _email: {
              subject: `🎟️ Novo Cupão Utilizado - ${planLabel}`
            }
          }),
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          }
        });
        
        console.log('✅ Email enviado com sucesso');
        
        // 2. Guardar uso no Supabase diretamente
        if (typeof supabase !== 'undefined') {
          const { error: dbError } = await supabase
            .from('coupon_usages')
            .insert({
              coupon_code: couponData.couponCode,
              coupon_type: couponData.couponType,
              subscriber_name: null,
              subscriber_email: couponData.couponCode,
              subscriber_phone: null,
              plan_type: planLabel,
              notification_sent: true
            });
            
          if (dbError) {
            console.warn('⚠️ Erro ao guardar no Supabase:', dbError);
          } else {
            console.log('✅ Utilização guardada no Supabase');
          }
        }
        
      } catch (error) {
        console.error('⚠️ Erro:', error);
        // Continuar mesmo com erro - não bloquear o user
      }
      
      // Mostrar mensagem de sucesso
      messageDiv.className = 'coupon-message coupon-message--success show';
      messageDiv.style.display = 'block';
      messageDiv.innerHTML = `
        <div style="margin-bottom: 1rem;">
          ${window.i18n ? window.i18n.t('coupon.valid') : '✅ Cupão válido!'} Email enviado para staff.
        </div>
        <button 
          type="button" 
          class="coupon-btn coupon-btn--primary" 
          onclick="proceedWithCoupon('${planType}')"
          style="width: 100%; margin-top: 1rem;"
        >
          ${window.i18n ? window.i18n.t('coupon.continue') : 'CONTINUAR PARA INSCRIÇÃO'}
        </button>
      `;
      
      // Mostrar explicação "Como Funciona"
      if (successInfoDiv) {
        successInfoDiv.style.display = 'block';
      }
    }
    
    /**
     * Skip coupon and proceed directly to REGYFIT
     */
    function skipCoupon(planType) {
      // Clear any stored coupon
      window.CouponSystem.clearSession();
      
      // Show REGYFIT directly
      window.CouponSystem.ui.showRegyStep(`modal-${planType}`);
    }
    
    /**
     * Proceed with coupon to REGYFIT
     * Simplified flow - no post-form needed
     */
    function proceedWithCoupon(planType) {
      // Show REGYFIT directly - that's it!
      window.CouponSystem.ui.showRegyStep(`modal-${planType}`);
      
      // Cupão já foi registado e email enviado
      // User completa inscrição REGYFIT normalmente
      // Staff aplica desconto manualmente na próxima mensalidade
      console.log('✅ Cupão registado. User a preencher REGYFIT...');
    }
    
    // Listen for REGYFIT completion and reset modal state
    document.addEventListener('DOMContentLoaded', function() {
      // Reset modals to show coupon pre-form by default
      const modals = ['elite', 'rise', 'starter'];
      modals.forEach(planType => {
        const modal = document.getElementById(`modal-${planType}`);
        if (modal) {
          // Ensure pre-form is visible and other parts are hidden initially
          const preForm = modal.querySelector('.coupon-pre-form');
          const instructions = modal.querySelector('.modal-purchase-instructions');
          const regyContainer = modal.querySelector('.modal-regy-container');
          const postForm = modal.querySelector('.coupon-post-form');
          
          if (preForm) preForm.style.display = 'block';
          if (instructions) instructions.style.display = 'none';
          if (regyContainer) regyContainer.style.display = 'none';
          if (postForm) postForm.style.display = 'none';
          
          // Observer to reset when modal closes
          const observer = new MutationObserver((mutations) => {
            mutations.forEach((mutation) => {
              if (modal.classList.contains('active')) {
                // Modal opened - show pre-form
                console.log('Modal opened:', planType);
                if (preForm) preForm.style.display = 'block';
                if (instructions) instructions.style.display = 'none';
                if (regyContainer) regyContainer.style.display = 'none';
                if (postForm) postForm.style.display = 'none';
                
                // Check for stored coupon
                const couponData = window.CouponSystem.getFromSession();
                if (couponData && couponData.planType === planType) {
                  console.log('Coupon flow detected for', planType);
                }
              } else {
                // Modal closed - reset state
                console.log('Modal closed:', planType);
                if (preForm) preForm.style.display = 'block';
                if (instructions) instructions.style.display = 'none';
                if (regyContainer) regyContainer.style.display = 'none';
                if (postForm) postForm.style.display = 'none';
                
                // Clear any validation messages
                const messageDiv = modal.querySelector(`#coupon-message-${planType}`);
                if (messageDiv) {
                  messageDiv.classList.remove('show', 'coupon-message--success', 'coupon-message--error');
                }
                
                // Reset input
                const input = modal.querySelector(`#coupon-input-${planType}`);
                if (input) input.value = '';
              }
            });
          });
          
          observer.observe(modal, {
            attributes: true,
            attributeFilter: ['class']
          });
        }
      });
      
      console.log('✅ Coupon system modal handlers initialized');
    });
  </script>
</body>
</html> 